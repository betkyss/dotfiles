colors:
  bright:
    black: "#4c566a"
    blue: "#81a1c1"
    cyan: "#8fbcbb"
    green: "#a3be8c"
    magenta: "#b48ead"
    red: "#bf616a"
    white: "#eceff4"
    yellow: "#ebcb8b"

  cursor:
    cursor: "#d8dee9"
    text: "#2e3440"

  dim:
    black: "#373e4d"
    blue: "#68809a"
    cyan: "#6d96a5"
    green: "#809575"
    magenta: "#8c738c"
    red: "#94545d"
    white: "#aeb3bb"
    yellow: "#b29e75"

  normal:
    black: "#3b4252"
    blue: "#81a1c1"
    cyan: "#88c0d0"
    green: "#a3be8c"
    magenta: "#b48ead"
    red: "#bf616a"
    white: "#e5e9f0"
    yellow: "#ebcb8b"

  primary:
    background: "#242424"
    dim_foreground: "#b1b1b1"
    foreground: "#abb2bf"

  search:
    matches:
      background: "#88c0d0"
      foreground: "CellBackground"

  selection:
    background: "#4c566a"
    text: "CellForeground"

  vi_mode_cursor:
    cursor: "#d8dee9"
    text: "#2e3440"

font:
  size: 9

  bold:
    family: "RobotoMono"
    style: "Bold"

  bold_italic:
    family: "RobotoMono"
    style: "Bold Italic"

  italic:
    family: "RobotoMono"
    style: "Italic"

  normal:
    family: "RobotoMono"
    style: "Regular"

window:
  padding:
    x: 15
    y: 15

key_bindings:
  - { key: C,     mods: Control|Shift, action: Copy }
  - { key: V,     mods: Control|Shift, action: Paste }
  # Bindings for Russian layout
  - { key: U0421, mods: Control|Shift, action: Copy }  # U+0421 is Cyrillic 'ะก'
  - { key: U041C, mods: Control|Shift, action: Paste } # U+041C is Cyrillic 'ะ'

selection:
  save_to_clipboard: true
